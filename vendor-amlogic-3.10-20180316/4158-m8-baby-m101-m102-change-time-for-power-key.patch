From: "tao.zeng" <tao.zeng@amlogic.com>
Date: Tue, 20 May 2014 20:15:52 +0800
Subject: [PATCH 4158/5965] m8 baby m101/m102:change time for power key

---
 arch/arm/boot/dts/amlogic/meson8b_m101_512M.dtd | 2 +-
 arch/arm/boot/dts/amlogic/meson8b_m102_1G.dtd   | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/arch/arm/boot/dts/amlogic/meson8b_m101_512M.dtd b/arch/arm/boot/dts/amlogic/meson8b_m101_512M.dtd
index 535b2c8dcd13..ad30904bd88a 100755
--- a/arch/arm/boot/dts/amlogic/meson8b_m101_512M.dtd
+++ b/arch/arm/boot/dts/amlogic/meson8b_m101_512M.dtd
@@ -806,7 +806,7 @@ sdhc{
         pmu_usbvol = <4400>;                /** voltage limit value if enabled       */
         pmu_pwroff_vol = <3200>;            /** hardware force power off voltage     */
         pmu_pwron_vol = <2900>;             /** power on when battery voltage above  */
-        pmu_pekoff_time = <6000>;           /** long press to power off system       */
+        pmu_pekoff_time = <12800>;           /** long press to power off system       */
         pmu_pekoff_en  = <1>;               /** enable long press to PWR OFF system  */
         pmu_peklong_time = <1500>;          /** threshold to detect long press       */
         pmu_pwrok_time   = <64>;            /** delay to detect pwr ok signal        */
diff --git a/arch/arm/boot/dts/amlogic/meson8b_m102_1G.dtd b/arch/arm/boot/dts/amlogic/meson8b_m102_1G.dtd
index 7d9610a285b8..cfa73c3a57ea 100755
--- a/arch/arm/boot/dts/amlogic/meson8b_m102_1G.dtd
+++ b/arch/arm/boot/dts/amlogic/meson8b_m102_1G.dtd
@@ -785,7 +785,7 @@ void root_func(){
         pmu_usbvol = <4400>;                /** voltage limit value if enabled       */
         pmu_pwroff_vol = <3200>;            /** hardware force power off voltage     */
         pmu_pwron_vol = <2900>;             /** power on when battery voltage above  */
-        pmu_pekoff_time = <6000>;           /** long press to power off system       */
+        pmu_pekoff_time = <12800>;           /** long press to power off system       */
         pmu_pekoff_en  = <1>;               /** enable long press to PWR OFF system  */
         pmu_peklong_time = <1500>;          /** threshold to detect long press       */
         pmu_pwrok_time   = <64>;            /** delay to detect pwr ok signal        */
